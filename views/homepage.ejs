<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Football Picks</title>
    <link rel="stylesheet" href="/css/homepage.css">
</head>
<body>
    <div id="header">
        <button id="menu-button" onclick="toggleMenu()"></button>
        <head-text>College Football Picks</head-text>
        <div id="dropdown-menu" class="hidden">
            <a href="/profile">Profile</a>
            <a href="/edit-account">Edit Account</a>
        </div>
    </div>
    <div id="homepage">
        <button id="make-picks" onclick="picks()">Make Picks</button>
        <button id="top-25" onclick="top25()">Current Top 25</button>
        <button id="weekly-results" onclick="weeklyresults()">Weekly Results</button>
        <button id="season-leaderboard" onclick="leaderboard()">Season Leaderboard</button>
        <button id="casino" onclick="casino()">Casino</button>
    </div>

    <script>
        function toggleMenu() {
            const dropdown = document.getElementById("dropdown-menu");
            const menuButton = document.getElementById("menu-button");
            
            if (dropdown.classList.contains("show")) {
                dropdown.classList.remove("show");
                setTimeout(() => dropdown.classList.add("hidden"), 300);
            } else {
                dropdown.classList.remove("hidden");
                const buttonRect = menuButton.getBoundingClientRect();
                setTimeout(() => dropdown.classList.add("show"), 10);
            }
        }

        function picks() {
            window.location.href = '/picks';
        }
        function top25() {
            window.location.href = '/top25';
        }
        function weeklyresults() {
            window.location.href = '/weeklyresults';
        }
        function leaderboard() {
            window.location.href = '/leaderboard';
        }
        function casino() {
            window.location.href = '/casino';
        }
    </script>
</body>
</html>
